<Window x:Class="Wrox.ProCSharp.Assemblies.DynamicAssemblyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dynamic Assembly" Height="300" Width="600">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition Width="Auto" MinWidth="120" />
    </Grid.ColumnDefinitions>
    <TextBox x:Name="textCode" AcceptsReturn="True" AcceptsTab="True" Grid.Row="0" Grid.Column="0" Margin="4" />
    <Button Click="Compile_Click" Grid.Row="0" Grid.Column="1" Content="Compile and Run" Margin="5, 10, 5, 10" />
    <TextBlock x:Name="textOutput" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="4" />
  </Grid>

</Window>
