<Window x:Class="PerformanceCounterDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Performance Counter Demo" Height="240" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Margin="10" Click="OnRegisterCounts" Content="Register Counts" />
        <Button x:Name="buttonCount" IsEnabled="False" Grid.Row="1" Margin="10" Click="OnButtonClick" MouseMove="OnMouseMove" Content="Count" />
    </Grid>
</Window>
