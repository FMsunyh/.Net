<Window xmlns:my="clr-namespace:Formula1Demo"  x:Class="Formula1Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formula 1 Demo" Height="240" Width="500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Orientation="Horizontal">
      <ComboBox Margin="5" SelectedIndex="0" Width="120" SelectionChanged="OnSelectionChanged">
        <Label>Select the view</Label>
        <Label>Tree</Label>
        <Label>DataGrid</Label>
        <Label>DataGrid with Grouping</Label>
      </ComboBox>
    </StackPanel>
    <Border Grid.Row="1" x:Name="container" />
  </Grid>
</Window>   
