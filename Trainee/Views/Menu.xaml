<UserControl x:Class="Trainee.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="clr-namespace:Trainee.Controls"
             mc:Ignorable="d"  
             >
    <UserControl.Resources>
        <Thickness x:Key="margin" Left="30" Top="5" Right="25" Bottom="5" /> 
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="1" HorizontalAlignment="Right">
            <control:RIBTextButton Margin="{StaticResource margin}" Text="New" MouseLeftButtonClick="{Binding New}"/>
            <control:RIBTextButton Margin="{StaticResource margin}" Text="Leave" MouseLeftButtonClick="{Binding Leave}" />
            <control:RIBTextButton Margin="{StaticResource margin}" Text="Promation" MouseLeftButtonClick="{Binding Promation}" />
            <control:RIBTextButton Margin="{StaticResource margin}" Text="Save" MouseLeftButtonClick="{Binding SaveStore}" />
        </StackPanel>
    </Grid>
</UserControl>
